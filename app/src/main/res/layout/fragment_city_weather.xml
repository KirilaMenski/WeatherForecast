<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/city_weather_ll"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/main_bakcground"
              android:gravity="center"
              android:orientation="vertical">


    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_large"/>

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="@dimen/weather_icon_width"
        android:layout_height="@dimen/weather_icon_height"/>


    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_medium"/>

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_medium"/>

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_medium"/>

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_medium"/>

    <TextView
        android:id="@+id/share"
        android:layout_width="@dimen/textview_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_margin"
        android:background="@drawable/share_background"
        android:gravity="center"
        android:padding="@dimen/text_padding"
        android:text="@string/share"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_medium"/>

</LinearLayout>