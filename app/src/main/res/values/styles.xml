<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="actionMenuTextColor">?attr/colorAccent</item><!--menu Item text color-->
        <item name="android:actionMenuTextColor">?attr/colorAccent</item><!--menu Item text color-->
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance
        </item><!--menu Item text color-->
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu
        </item><!--menu Item PopupMenu bg and text color-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/background</item>
        <!-- Toolbar Theme / Apply white arrow -->
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item><!--menu Item-->

        <item name="android:actionMenuTextAppearance">@style/MyMenuTextAppearance
        </item> <!--menu Item-->
    </style>

    <style name="MyMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- White arrow -->
        <item name="android:textColorPrimary">?attr/colorAccent</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <!-- The beef: background color for Action Bar overflow menu -->
    <style name="MyApp.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <!--<item name="android:popupBackground">@color/blue</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.CustomTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/CustomActionBarTheme</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/toolbar</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="CustomActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/toolbar</item>
    </style>

    <style name="AppTheme.NoActionBar.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.ActionBarTheme.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!-- Dialogs -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">

    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/edit_color</item>
        <item name="colorControlActivated">@color/edit_color</item>
        <item name="colorControlHighlight">@color/edit_color</item>
    </style>

    <style name="Theme.App.Search" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlHighlight">@color/edit_color</item>
    </style>

</resources>
